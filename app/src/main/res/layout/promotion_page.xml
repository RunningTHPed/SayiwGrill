    <ImageButton
        android:id="@+id/imgbutton2"
        android:layout_width="260dp"
        android:layout_height="75dp"
        android:layout_below="@+id/imgbutton1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttondesign"
        android:padding="10dp"
        android:scaleType="fitStart"
        android:src="@drawable/pig" />

    <TextView
        android:id="@+id/textPig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgbutton2"
        android:layout_alignLeft="@+id/imgbutton2"
        android:layout_alignTop="@+id/imgbutton2"
        android:layout_alignBottom="@+id/imgbutton2"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:clickable="false"
        android:text=": PORK"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:layout_marginLeft="90dp" />

    <ImageButton
        android:id="@+id/imgbutton3"
        android:layout_width="260dp"
        android:layout_height="75dp"
        android:layout_below="@+id/imgbutton2"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttondesign"
        android:scaleType="fitStart"
        android:src="@drawable/hen"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp" />
    <TextView
        android:id="@+id/textHen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgbutton3"
        android:layout_alignLeft="@+id/imgbutton3"
        android:layout_alignTop="@+id/imgbutton3"
        android:layout_alignBottom="@+id/imgbutton3"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:clickable="false"
        android:text=": CHICKEN"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:layout_marginLeft="90dp" />

    <ImageButton
        android:id="@+id/imgbutton4"
        android:layout_width="260dp"
        android:layout_height="75dp"
        android:layout_below="@+id/imgbutton3"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttondesign"
        android:scaleType="fitStart"
        android:src="@drawable/octopus"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/textSeafood"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignStart="@+id/imgbutton4"
        android:layout_alignLeft="@+id/imgbutton4"
        android:layout_alignTop="@+id/imgbutton4"
        android:layout_alignBottom="@+id/imgbutton4"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:clickable="false"
        android:text=": SEAFOOD"
        android:textColor="#FFFFFF"
        android:textSize="32sp" />

    <ImageButton
        android:id="@+id/imgbutton5"
        android:layout_width="260dp"
        android:layout_height="75dp"
        android:layout_below="@+id/imgbutton4"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttondesign"
        android:scaleType="fitStart"
        android:src="@drawable/glass"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/textBeverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgbutton5"
        android:layout_alignLeft="@+id/imgbutton5"
        android:layout_alignTop="@+id/imgbutton5"
        android:layout_alignBottom="@+id/imgbutton5"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:clickable="false"
        android:text=": BEVERAGE"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_marginLeft="90dp" />

    <ImageButton
        android:id="@+id/imgbutton6"
        android:layout_width="260dp"
        android:layout_height="75dp"
        android:layout_below="@+id/imgbutton5"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttondesign"
        android:padding="10dp"
        android:scaleType="fitStart"
        android:src="@drawable/vegetables" />
    <TextView
        android:id="@+id/textVegetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgbutton6"
        android:layout_alignLeft="@+id/imgbutton6"
        android:layout_alignTop="@+id/imgbutton6"
        android:layout_alignBottom="@+id/imgbutton6"
        android:layout_marginStart="90dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="22dp"
        android:clickable="false"
        android:text=": VEGETABLES"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginLeft="90dp" />

    <Button
        android:onClick="openPromotion"
        android:id="@+id/buttonPromotion"
        android:layout_width="275dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/buttondesign2"
        android:text="Promotion"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:onClick="openOrder"
        android:id="@+id/buttonOrder"
        android:layout_width="275dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="610dp"
        android:layout_marginLeft="317dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/buttondesign"
        android:text="Order"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:onClick="openCheckout"
        android:id="@+id/buttonCheckout"
        android:layout_width="275dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="920dp"
        android:layout_marginLeft="924dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/buttondesign"
        android:text="Checkout"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="350dp"
        android:layout_marginRight="350dp"
        android:layout_marginBottom="250dp"
        android:text="Promotion"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#80FF0000"
        android:textSize="72sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="100dp"
