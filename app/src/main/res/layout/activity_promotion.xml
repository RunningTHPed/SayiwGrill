<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Promotion">

    <Button

        android:id="@+id/buttonPromotion"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_toStartOf="@+id/buttonOrder"
        android:layout_toLeftOf="@+id/buttonOrder"
        android:background="@drawable/buttondesign"
        android:text="Promotion"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button

        android:id="@+id/buttonMenu"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_toStartOf="@+id/buttonPromotion"
        android:layout_toLeftOf="@+id/buttonPromotion"
        android:background="@drawable/buttondesign"
        android:text="Menu"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button

        android:id="@+id/buttonOrder"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_toStartOf="@+id/buttonCheckout"
        android:layout_toLeftOf="@+id/buttonCheckout"
        android:background="@drawable/buttondesign"
        android:text="Order"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button

        android:id="@+id/buttonCheckout"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:background="@drawable/buttondesign"
        android:text="Checkout"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="100dp"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="36sp" />


</RelativeLayout>