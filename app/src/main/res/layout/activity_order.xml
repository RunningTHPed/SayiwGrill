<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Order">

    <Button

        android:id="@+id/buttonPromotion"
        android:onClick="openPromotion"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_toStartOf="@+id/buttonOrder"
        android:layout_toLeftOf="@+id/buttonOrder"
        android:background="@drawable/buttondesign"
        android:text="Promotion"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button

        android:id="@+id/buttonMenu"
        android:onClick="openMenu"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_toStartOf="@+id/buttonPromotion"
        android:layout_toLeftOf="@+id/buttonPromotion"
        android:background="@drawable/buttondesign"
        android:text="Menu"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button

        android:id="@+id/buttonOrder"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/buttondesign"
        android:text="Order"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="100dp"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="36sp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="860dp"
        android:layout_height="506dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="111dp"
        android:layout_marginRight="111dp"
        android:layout_marginBottom="45dp" />

    <Button
        android:id="@+id/pressOrder"
        android:onClick="PressOrder"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttondesign2"
        android:text="press to Order"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />


</RelativeLayout>